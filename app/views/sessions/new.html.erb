<h1><%= t 'session.login_title' %></h1>

<% if flash[:error] -%>
  <p class="error_message"><%= flash[:error] %></p>
<% end -%>

<% form_tag session_path do -%>
<p><%= label_tag 'login', t('session.login') %><br />
<%= text_field_tag 'login', @login %></p>

<p><%= label_tag 'password', t('session.password') %><br/>
<%= password_field_tag 'password', nil %></p>

<p><%= label_tag 'remember_me', t('session.remember_me') %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><%= submit_tag t('session.login_button') %></p>
<% end -%>
