<h1>New bookmark</h1>

<div>
<% form_for(@bookmark_site) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url, :size => 60 %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 60 %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :cols => 60, :rows => 10 %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list, :size => 60 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
</div>

<%= link_to 'Back', bookmark_sites_path %>
