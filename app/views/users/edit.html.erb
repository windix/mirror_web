<h1><%=t 'users.edit_profile' %></h1>

<% if flash[:error] -%>
  <p class="error_message"><%= flash[:error] %></p>
<% end -%>

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for(@user) do |f| -%>
  
<p><%= label_tag 'name', t('users.name') %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag 'email', t('users.email') %><br/>
<%= f.text_field :email %></p>

<p><%=t 'users.update_password_prompt' %>:</p>

<p><%= label_tag 'password', t('session.password') %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', t('users.confirm_password') %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag t('users.update_button') %></p>
<% end -%>

<%= link_to t('common.back'), user_path(@user) %>
