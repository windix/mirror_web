<h1><%=t 'users.signup_title' %></h1>

<% if flash[:error] -%>
  <p class="error_message"><%= flash[:error] %></p>
<% end -%>

<% if @user %>
  <% @user.password = @user.password_confirmation = nil %>

  <%= error_messages_for :user %>
  <% form_for(@user) do |f| -%>
  <p><%= label_tag 'name', t('users.name') %><br/>
  <%= f.text_field :name %></p>
  
  <p><%= label_tag 'login', t('session.login') %><br/>
  <%= f.text_field :login %></p>

  <p><%= label_tag 'email', t('users.email') %><br/>
  <%= f.text_field :email %></p>

  <p><%= label_tag 'password', t('session.password') %><br/>
  <%= f.password_field :password %></p>

  <p><%= label_tag 'password_confirmation', t('users.confirm_password') %><br/>
  <%= f.password_field :password_confirmation %></p>

  <p><%= submit_tag t('users.signup_button') %></p>
  <% end -%>
<% end %>
